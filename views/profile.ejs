<% include ./partials/header %>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
          <br>
          <p class=" text-info"> </p>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">

          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Hello <%= dataUser.full_name %></h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center">
                  <img alt="" src="http://babyinfoforyou.com/wp-content/uploads/2014/10/avatar-300x300.png" class="img-circle img-responsive"> </div>
                <div class=" col-md-9 col-lg-9 ">
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>Username:</td>
                        <td>
                          <%= dataUser.username %>
                        </td>
                      </tr>
                      <tr>
                        <td>Full Name:</td>
                        <td>
                          <%= dataUser.full_name %>
                        </td>
                      </tr>
                      <tr>
                        <tr>
                          <td>Gender</td>
                          <td>
                            <%= dataUser.gender %>
                          </td>
                        </tr>
                        <tr>
                          <td>Email</td>
                          <td>
                            <a href="mailto:<%= dataUser.email %>">
                              <%= dataUser.email %>
                            </a>
                          </td>
                        </tr>
                        
                        <td>Packet Status</td>
                        <% if(dataUser.Packet){ %>
                        <td>
                          <%= dataUser.Packet.packet_name %>
                        </td>
                        <%} else { %>
                        <td>Unassigned</td>
                        <%}%>
                      </tr>
                      <tr>
                        <td></td>
                        <td></td>
                      </tr>
                    </tbody>
                  </table>

                  <a href="/dashboard/profile/playlist" class="btn btn-primary">My Playlist</a>                  
                  <a href="/dashboard/profile/edit/<%=dataUser.id%>" class="btn btn-warning">Edit Profile</a>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>

  </main>
  <% include ./partials/footer %>